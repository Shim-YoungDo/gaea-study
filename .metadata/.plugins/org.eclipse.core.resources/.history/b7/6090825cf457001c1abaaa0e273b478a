<script>
$(".enroll_button").click(function(){
	
	let eForm = $("#enrollForm");
	
	if(${member} != null){
		eForm.attr("action","/board/register");
		eForm.submit();
	}
	else if(${member} == null){
		eForm.attr("action", "/board/list");
		eForm.attr("method", "get");
		eForm.submit();
	}
});
</script>
